<div class="tab-content m-3" >
    <div class="container" style="margin-top:100px;">
      <div class="row p-3">
				<div class="col-xs-12 col-md-4">
          <div class="card property">
            <div class="card-body">
              <h3 class="card-title text-primary"><%= property.title %></h3>
              <h5><%= property.price %> €/mois</h5>
              <p class="card-text">
              <ul>
                <li>3 pièces</li>
                <li><%= property.surface %> m2</li>
                <li>2 chambres</li>
              </ul>
              </p>
              <%= link_to 'Découvrir', property_path(property.id), class: 'btn btn-orange' %> 
              <br><br>
              <% if current_user.carts.last.properties.where(id: property.id).empty?  %>
                <%=link_to 'Ajout rapide au panier', property_reservations_path(property.id), method: :post, class: "btn btn-primary btn-sm"%>
              <%else%>
                <small class="text-primary">Déjà dans votre panier</small>
              <% end %>
            </div>
          </div>
        </div>
				<div class="col-xs-12 col-md-8">
          <img src="<%=asset_path('sample.jpg')%>" alt="">
        </div>
        
				</div>
    </div>

</div>