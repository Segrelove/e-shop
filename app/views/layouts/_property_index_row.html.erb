<div class="tab-content m-3" >
    <div class="container">
      <div class="row p-3">
				<div class="col-4">
          <div class="card property">
            <div class="card-body">
              <h3 class="card-title text-blue"><%= property.title %></h3>
              <h5><%= property.price %> €/mois</h5>
              <p class="card-text">
              <ul>
                <li>3 pièces</li>
                <li><%= property.surface %> m2</li>
                <li>2 chambres</li>
              </ul>
              </p>
              <%= link_to 'Découvrir', property_path(property.id), class: 'btn btn-orange' %> 
            </div>
          </div>
        </div>
				<div class="col-8">
          <img src="<%=asset_path('sample.jpg')%>" alt="">
        </div>
        
				</div>
    </div>

</div>